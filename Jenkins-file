

pipeline {
    agent any
    
    tools {
        terraform    'Terraform'
    }
    
    
    stages {
        stage( 'git checkout') {
            steps {
                echo 'cloning codbase'
                git branch: 'main', credentialsId: 'cf2a02be-f5fa-4b56-b033-84cd150afd68', url: 'https://github.com/jatebezi/airbnb-infra.git'
                sh 'ls'
            }
        }
        
        stage( 'terraform init') {
            steps {
                sh 'terraform init'
            }
        }

        stage( 'terraform plan') {
            steps {
                sh 'terraform plan'
            }
        }
        
        
        stage( 'terraform apply ') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        } 
    }
    
}   
